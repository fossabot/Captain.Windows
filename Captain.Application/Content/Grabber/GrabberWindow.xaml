<!-- GrabberWindow resources -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- WindowStyle sets the window chrome properties so the window can be actually resized -->
  <Style x:Key="WindowStyle" TargetType="{x:Type Window}">
    <Setter Property="WindowChrome.WindowChrome">
      <Setter.Value>
        <!-- we do not want a caption, as we'll be moving the window by grabbing it by its body -->
        <WindowChrome CaptionHeight="0" CornerRadius="0" GlassFrameThickness="0" ResizeBorderThickness="16" UseAeroCaptionButtons="False"/>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- style for window resize grips -->
  <Style x:Key="EllipseStyle" TargetType="{x:Type Ellipse}">
    <Setter Property="Width" Value="10" />
    <Setter Property="Height" Value="10" />

    <Setter Property="Margin" Value="4" />

    <Setter Property="Fill" Value="White" />
    <Setter Property="Stroke" Value="#80FFFFFF" />
    <Setter Property="StrokeThickness" Value="5" />

    <!-- ellipse drop shadow -->
    <Setter Property="Effect">
      <Setter.Value>
        <DropShadowEffect BlurRadius="4" Direction="270" Opacity="0.33" ShadowDepth="2" />
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>